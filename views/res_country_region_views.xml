<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_country_region_tree" model="ir.ui.view">
        <field name="name">res.country.region.tree</field>
        <field name="model">res.country.region</field>
        <field name="arch" type="xml">
            <tree string="Region" editable="top">
                <field name="name"/>
                <field name="code"/>
                <field name="country_id"/>
                <field name="state_id" context="{'default_country_id': country_id}"/>
            </tree>
        </field>
    </record>

    <record id="res_country_region_filter" model="ir.ui.view">
        <field name="name">res.country.region.search</field>
        <field name="model">res.country.region</field>
        <field name="arch" type="xml">
            <search string="Search Region">
                <field name="name" filter_domain="['|', ('name','ilike',self), ('code','ilike',self)]" string="Region"/>
                <separator/>
                <field name="state_id"/>
                <field name="country_id"/>
            </search>
        </field>
     </record>

    <record id="action_res_country_region_tree" model="ir.actions.act_window">
        <field name="name">Region</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.country.region</field>
        <field name="view_mode">tree</field>
        <field name="help">
            Display and manage the list of all regions that can be assigned to
            your partner records.
        </field>
    </record>

    <!--<menuitem id="menu_res_country_region_city" action="action_res_country_region_tree" parent="contacts.menu_localisation" sequence="2"/>-->
</odoo>
