<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_city_inherit_tree" model="ir.ui.view">
        <field name="name">res.city.inherit.tree</field>
        <field name="model">res.city</field>
        <field name="inherit_id" ref="base_address_city.view_city_tree"/>
        <field name="arch" type="xml">
            <field name="name" position="before">
                <field name="code"/>
            </field>
        </field>
    </record>

    <record id="view_city_inherit_filter" model="ir.ui.view">
        <field name="name">res.city.inherit.search</field>
        <field name="model">res.city</field>
        <field name="inherit_id" ref="base_address_city.view_city_filter"/>
        <field name="arch" type="xml">
            <field name="country_id" position="before">
                <field name="state_id"/>
            </field>
        </field>
    </record>

    <menuitem id="menu_country_state_city" action="base_address_city.action_res_city_tree" parent="contacts.menu_localisation" sequence="2"/>
</odoo>
